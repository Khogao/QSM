{
  "name": "qsm",
  "version": "1.0.0",
  "description": "QueryMaster - Intelligent Document Query System with RAG",
  "main": "dist-electron/main.js",
  "author": "Khogao",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"vite --host\" \"npm run electron:dev\"",
    "electron:dev": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "tsc && vite build && electron-builder",
    "build:portable": "npm run build -- --win portable",
    "preview": "vite preview"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@huggingface/transformers": "^3.7.5",
    "better-sqlite3": "^9.6.0",
    "electron-store": "^8.1.0",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.544.0",
    "mammoth": "^1.11.0",
    "onnxruntime-web": "^1.23.0",
    "pdfjs-dist": "^5.4.149",
    "react-hook-form": "^7.64.0",
    "react-resizable-panels": "^3.0.6",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.qsm.app",
    "productName": "QSM - QueryMaster",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "portable": {
      "artifactName": "QSM-QueryMaster-Portable-${version}.exe"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ]
  }
}
